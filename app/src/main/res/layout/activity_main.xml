<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ConversiÃ³n Monedas"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="25sp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Moneda"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:id="@+id/tmoneda1"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sMoneda1"
        android:entries="@array/Monedas"
        >


    </Spinner>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Moneda a cambiar"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:id="@+id/tmoneda2"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sMoneda2"
        android:entries="@array/Monedas"
        >
    </Spinner>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor para cambiar"
        android:textStyle="italic"
        android:textAlignment="center"
        android:id="@+id/Evalor"
        android:textSize="14dp"
        android:inputType="numberDecimal"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cambio"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:onClick="change"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valor Cambio"
        android:textColor="@color/red"
        android:id="@+id/tvalor"/>

</LinearLayout>